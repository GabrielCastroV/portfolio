    class: "dark:bg-[#003159] bg-zinc-200 text-black dark:text-white",
    icon: Tailwind,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "dark:bg-[#3e230a] bg-zinc-200 text-black dark:text-white",
    icon: JavaScript,
  },
  NODE: {
    name: "Node.js",
    class: "dark:bg-[#171717] bg-zinc-200 text-black dark:text-white",
    icon: Node,
  },
  MONGODB: {
    name: "MongoDB",
    class: "dark:bg-[#003618] bg-zinc-200 text-black dark:text-white",
    icon: MongoDB,
  },
  EXPRESS: {
    name: "Express.js",
    class: "dark:bg-[#3d3d3d] bg-zinc-200 text-black dark:text-white",
    icon: ExpressJS,
  },
  JWT: {
    name: "JWT",
    class: "dark:bg-[#490055] bg-zinc-200 text-black dark:text-white",
    icon: JWT,
