    class: "dark:bg-[#171717] bg-zinc-200 text-black dark:text-white",
    icon: Prisma,
  },
  ZOD: {
    name: "Zod",
    class: "dark:bg-[#99b9e0] bg-zinc-200 text-black dark:text-black",
    icon: Zod,
  },
};
const PROJECTS = [
  {
    title: "Custom Case (E-Commerce)",
    description:
      "Custom Case is an e-commerce platform for selling personalized phone cases. Users can upload their photos, select their iPhone model, and choose case colors. This project highlights a comprehensive solution for customized product sales and an optimized user experience.",
    link: "https://customcase-weld.vercel.app/",
    github: "https://github.com/GabrielCastroV/customcase",
    image: "/custom-case.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.SHADCN_UI,
      TAGS.PRISMA,
      TAGS.STRIPE,
    ],
  },
  {
    title: "ContactsApp",
    description:
      "ContactsApp is a beautifully designed, responsive web platform. It ensures data security with email verification, while JWT and bcrypt provide robust user authentication and password protection.",
    link: "https://contactsapp-0514.onrender.com/",
    github: "https://github.com/GabrielCastroV/ContactsApp",
    image: "/contactsapp.webp",
    tags: [
      TAGS.JAVASCRIPT,
      TAGS.NODE,
      TAGS.TAILWIND,
      TAGS.MONGODB,
      TAGS.EXPRESS,
      TAGS.JWT,
    ],
  },
  {
    title: "Spotify Clone",
    description:
      "A Spotify clone that offers a selection of lo-fi music, playback and volume controls. It is integrated with a custom API to provide an optimized and seamless listening experience.",
    link: "https://spotify-clone-gamma-liart.vercel.app/",
    github: "https://github.com/GabrielCastroV/spotify-clone",
    image: "/spotify-clone.webp",
    tags: [TAGS.ASTRO, TAGS.REACT, TAGS.TYPESCRIPT, TAGS.TAILWIND],
  },
  {
    title: "EDTÃ©cnica Telegram Bot",
    description:
      "I developed @edtecnicabot, a Telegram assistant bot and administrative web. It allows students to access course details, make payments, and obtain information with simple commands. The interface efficiently manages module data and payments.",
    link: "https://t.me/edtecnicabot",
    github: "https://github.com/GabrielCastroV/edt-telegram-bot",
    image: "/edt-bot.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.NODE, TAGS.MONGODB],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative aspect-[3/2] flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <Image
              alt={title}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105 select-none"
              src={image}
              width={100}
              height={100}
              loading={"eager"}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-2 flex-wrap">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 select-none `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4 select-none ">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6 dark:text-white text-black" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4 dark:text-white text-black" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
